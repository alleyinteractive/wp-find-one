{
  "name": "alleyinteractive/wp-find-one",
  "description": "Query for and return one WordPress post, term, or other object, bypassing intermediate arrays.",
  "license": "GPL-2.0-or-later",
  "type": "library",
  "authors": [
    {
      "name": "Alley",
      "email": "info@alley.com"
    }
  ],
  "require": {
    "php": "^8.2"
  },
  "require-dev": {
    "alleyinteractive/alley-coding-standards": "^2.1",
    "ergebnis/composer-normalize": "^2.44",
    "mantle-framework/testkit": "^1.1",
    "szepeviktor/phpstan-wordpress": "^1.3"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "files": [
      "src/alley/wp/find-one.php",
      "src/alley/wp/find-result.php"
    ]
  },
  "config": {
    "allow-plugins": {
      "alleyinteractive/composer-wordpress-autoloader": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ergebnis/composer-normalize": true
    },
    "lock": false,
    "sort-packages": true
  },
  "scripts": {
    "phpcbf": "phpcbf .",
    "phpcs": "phpcs .",
    "phpstan": "phpstan --memory-limit=512M",
    "phpunit": "phpunit",
    "test": [
      "@phpcs",
      "@phpstan",
      "@phpunit"
    ]
  }
}
